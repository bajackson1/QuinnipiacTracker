<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.lists.ResidenceAddFragment"
        android:padding="12dp">

        <TextView
            android:id="@+id/addResidenceHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="@string/add_residence"
            android:textColor="@color/QUblue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/addResidenceTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/enter_a_residence_name"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_below="@id/addResidenceHeading"
            android:background="@drawable/blue_border"
            android:layout_marginTop="16dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/saveResidenceName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            android:textSize="20sp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@id/addResidenceTitle"
            android:background="@drawable/blue_border"
            android:backgroundTint="@color/QUblue"
            android:layout_marginTop="16dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/cancelResidence"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            android:textSize="20sp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@id/saveResidenceName"
            android:background="@drawable/blue_border"
            android:backgroundTint="@color/QUblue"
            android:layout_marginTop="16dp"
            android:maxLines="1" />

    </RelativeLayout>
</layout>
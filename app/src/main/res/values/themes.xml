<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Normal Quinnipiac theme -->
    <style name="Theme.QuinnipiacTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/QUnavy</item>
        <item name="colorPrimaryVariant">@color/QUnavy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/QUyellow</item>
        <item name="colorSecondaryVariant">@color/QUyellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- DarkActionBar Quinnipiac theme -->
    <style name="Theme.QuinnipiacTracker.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/QUblue</item>
        <item name="colorPrimaryVariant">@color/QUblue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/QUyellow</item>
        <item name="colorSecondaryVariant">@color/QUyellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>